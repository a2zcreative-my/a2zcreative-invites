{
  "name": "a2zcreative-invites",
  "version": "1.0.0",
  "description": "Multi-Purpose Digital Invitation & Attendance Management Platform",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "echo 'Error: This is a static export. Use npm run preview' && exit 1",
    "preview": "npx serve out",
    "preview:wrangler": "wrangler pages dev out",
    "lint": "eslint .",
    "db:init": "wrangler d1 execute DB --file=./schema.sql",
    "db:seed": "wrangler d1 execute DB --file=./seed.sql",
    "lint:css": "stylelint \"src/**/*.css\" --ignore-pattern \"**/invitation.css\" --ignore-pattern \"**/wizard.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix --ignore-pattern \"**/invitation.css\" --ignore-pattern \"**/wizard.css\"",
    "prepare": "husky"
  },
  "keywords": [
    "invitation",
    "rsvp",
    "wedding",
    "corporate",
    "cloudflare",
    "d1"
  ],
  "author": "A2Z Creative",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-strict-value": "^1.10.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "wrangler": "^3.0.0"
  },
  "lint-staged": {
    "*.css": "stylelint --fix"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@floating-ui/react": "^0.27.16",
    "@supabase/supabase-js": "^2.90.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.562.0",
    "next": "15.4.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
